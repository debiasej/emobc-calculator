<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent" 
	android:background="#FFFFFF"
	android:cacheColorHint="#999999">
		<ImageButton android:id="@+id/wwwButton"
			android:layout_gravity="bottom|left"
			android:layout_marginLeft="10dip" 
			android:background="@null" 
			android:layout_height="0dip" 
			android:layout_width="0dip"
			android:contentDescription="@null"/>
			
		<LinearLayout android:layout_marginRight="10dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingBottom="120dip" android:layout_gravity="bottom|right">
				<ImageButton android:background="@null"
					android:scaleType="fitXY" 
					android:id="@+id/facebookButton" 
					android:src="@drawable/icon_facebook" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:contentDescription="@null"/>
				<ImageButton android:background="@null"
					android:scaleType="fitXY" 
					android:id="@+id/twitterButton" 
					android:src="@drawable/icon_twitter" 
					android:padding="0dip" 
					android:layout_marginLeft="10dip" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:contentDescription="@null"/>
		</LinearLayout>
</FrameLayout>